{
	"scopeName": "source.arnicomp",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#preprocessor" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#numbers" },
		{ "include": "#operators" },
		{ "include": "#identifiers" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{ "name": "comment.line.double-slash.arnicomp", "match": "//.*$" }
			]
		},
		"preprocessor": {
			"patterns": [
				{
					"name": "meta.preprocessor.define.arnicomp",
					"match": "^\\s*(#)(def|define)\\b\\s+([A-Za-z_][A-Za-z0-9_]*)",
					"captures": {
						"1": { "name": "punctuation.definition.directive.preprocessor.arnicomp" },
						"2": { "name": "keyword.control.directive.preprocessor.arnicomp" },
						"3": { "name": "entity.name.constant.preprocessor.arnicomp" }
					}
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.arnicomp",
					"match": "\\b(if|elif|else|endif|while|endwhile|dasm|endasm|break|continue)\\b"
				},
				{
					"name": "storage.modifier.const.arnicomp",
					"match": "\\bconst\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.arnicomp",
					"match": "\\bbyte\\b(?:\\s*\\[\\s*\\d+\\s*\\])?"
				}
			]
		},
		"numbers": {
			"patterns": [
				{ "name": "constant.numeric.hex.arnicomp", "match": "\\b0x[0-9A-Fa-f]+\\b" },
				{ "name": "constant.numeric.decimal.arnicomp", "match": "\\b\\d+\\b" }
			]
		},
		"operators": {
			"patterns": [
				{ "name": "keyword.operator.assignment.arnicomp", "match": "=" },
				{ "name": "keyword.operator.arithmetic.arnicomp", "match": "\\+|-" },
				{ "name": "punctuation.section.brackets.arnicomp", "match": "\\[|\\]" },
				{ "name": "punctuation.terminator.statement.arnicomp", "match": ";" },
				{ "name": "punctuation.separator.arnicomp", "match": "," },
				{ "name": "punctuation.section.group.arnicomp", "match": "\\(|\\)" },
				{ "name": "punctuation.section.block.arnicomp", "match": "\\{|\\}" }
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "constant.other.symbol.arnicomp",
					"match": "\\$[A-Za-z_][A-Za-z0-9_]*"
				},
				{
					"name": "constant.other.arnicomp",
					"match": "\\b[A-Z_][A-Z0-9_]*\\b"
				},
				{
					"name": "variable.other.arnicomp",
					"match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
				}
			]
		}
	}
}
